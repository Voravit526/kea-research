---
/**
 * User Section Component
 * Displays users list with loading and empty states
 */
---

<div class="col-12 mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h5 class="mb-0">
      <i class="bi bi-people me-2"></i>User Accounts
    </h5>
    <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addUserModal">
      <i class="bi bi-plus-lg me-1"></i>Add User
    </button>
  </div>

  {/* Loading State */}
  <div id="users-loading" class="text-center py-4 d-none">
    <div class="spinner-border spinner-border-sm text-primary" role="status"></div>
    <span class="ms-2 text-muted">Loading users...</span>
  </div>

  {/* Users List - populated by JavaScript */}
  <div id="users-list" class="list-group"></div>

  {/* Empty State */}
  <div id="users-empty" class="text-center text-muted py-4 d-none">
    <i class="bi bi-person-x" style="font-size: 2rem;"></i>
    <p class="mt-2 mb-0">No users configured yet</p>
  </div>
</div>
