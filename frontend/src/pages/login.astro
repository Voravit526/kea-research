---
import BaseLayout from '../layouts/BaseLayout.astro';
import { detectLocale } from '../i18n';
import { createTranslator } from '../i18n/translations';

const locale = detectLocale(Astro.request);
const t = createTranslator(locale);
---

<BaseLayout title="Login - KEA Research">
  <div class="min-vh-100 d-flex align-items-center justify-content-center bg-body-tertiary">
    <div class="card shadow-sm card-auth">
      <div class="card-body p-4">
        <div class="text-center mb-4">
          <i class="bi bi-person-circle text-kea icon-xl"></i>
          <h4 class="mt-3">KEA Research</h4>
          <p class="text-muted small">Enter your credentials to access chat</p>
        </div>
        <form id="login-form">
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" id="username" required autocomplete="username">
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" required autocomplete="current-password">
          </div>
          <div id="login-error" class="alert alert-danger d-none" role="alert"></div>
          <button type="submit" class="btn btn-kea w-100" id="login-btn">
            <span class="spinner-border spinner-border-sm me-2 d-none" id="login-spinner" role="status"></span>
            Login
          </button>
        </form>
        <div class="text-center mt-3 pt-3 border-top">
          <a href="/" class="text-decoration-none">
            <i class="bi bi-arrow-left me-1"></i>Continue as Guest
          </a>
        </div>
      </div>
    </div>
  </div>

  <script>
    import '../scripts/user-login.ts';
  </script>
</BaseLayout>
